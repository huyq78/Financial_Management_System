<%- include('./includes/head.ejs') %>

<body>

    <%- include('./includes/navigation.ejs') %>


   <!-- [ Main Content ] start -->
    <section class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <!-- [ breadcrumb ] start -->
                    <div class="page-header">
                        <div class="page-block">
                            <div class="row align-items-center">
                                <div class="col-md-12">
                                    <div class="page-header-title">
                                        <h5 class="m-b-10">PERSONAL FINANCE</h5>
                                    </div>
                                    <ul class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/dashboard"><i class="feather icon-home"></i></a></li>
                                        <li class="breadcrumb-item"><a href="#">Income</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ breadcrumb ] end -->
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Add New Income</h5>
                                        </div>
                                        <form class="card-body" action="/income" method="POST">
                                            <div class="row">
                                                <div class="col-md-6">
                                                        <div>
                                                            <label>Category</label>
                                                            <select class="mb-3 form-control" name="category_id" required>
                                                                <option>Select category</option>
                                                                <option value="3">Salary</option>
                                                                <option value="4">Bonus</option>
                                                                <option value="5">Investment Interest</option>
                                                                <option value="6">Gifts</option>
                                                                <option value="2">Others</option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Amount</label>
                                                            <div class="input-group mb-3">
                                                            <input required type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="amount">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text" id="inputGroup-sizing-default">VND</span>
                                                            </div>
                                                        </div>
                                                        </div>
                                                </div>
                                                <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Date</label>
                                                            <input required type="date" class="form-control" placeholder="Text" name="date">
                                                        </div>
                                                    <label>Choose Wallet</label>
                                                            <select required class="mb-3 form-control" name="wallet_id">
                                                                <option>Select Wallet</option>
                                                                <% for (let wallet of wallets) { %>
                                                                    <option value="<%= wallet.wallet_id  %>"><%= wallet.name %>: <%= wallet.acc_balance  %> VND</option>
                                                                <% } %>
                                                            </select>
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <label for="exampleFormControlTextarea1">Note</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="note"></textarea>
                                            </div>
                                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                                    <!-- Input group -->
                                </div>
                                <!-- [ Hover-table ] start -->
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Recent Incomes</h5>
<!--                                            <span class="d-block m-t-5">use class <code>table-hover</code> inside table element</span>-->
                                        </div>
                                        <div class="card-block table-border-style">
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>No.</th>
                                                            <th>Category</th>
                                                            <th>Amount</th>
                                                            <th>Date</th>
                                                            <th>Details</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% let i = 1 %>
                                                        <% for (let income of incomes) { %>
                                                            <tr>
                                                                <th scope="row"><%= i %></th>
                                                                <td><%= income.name[0] %></td>
                                                                <td><%= income.amount %></td>
                                                                <td><%= income.date.toLocaleDateString() %> </td>
                                                                <td><a href="/incomeDetails/<%= income.income_id %>"><i class="fa-solid fa-arrow-up-right-from-square"></i></a></td>
                                                            </tr>
                                                        <% i++ %>
                                                        <% }  %>
                                                    </tbody>
                                                </table>
                                                <div class="container">
                                                <div class="row">
                                                    <div class="col">
                                                    </div>
                                                    <div class="col">
                                                        <nav aria-label="Page navigation example">
                                                        <ul class="pagination">
                                                            <li class="page-item"><a class="page-link" href="#!">Previous</a></li>
                                                            <li class="page-item"><a class="page-link" href="#!">1</a></li>
                                                            <li class="page-item"><a class="page-link" href="#!">2</a></li>
                                                            <li class="page-item"><a class="page-link" href="#!">3</a></li>
                                                            <li class="page-item"><a class="page-link" href="#!">Next</a></li>
                                                        </ul>
                                                        </nav>
                                                    </div>
                                                    <div class="col">
                                                    </div>
                                                </div>
                                                </div>

                                        </div>
                                    </div>
                                </div>

                                <!-- [ Hover-table ] end -->

                            </div>
                            <!-- [ Main Content ] end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- [ Main Content ] end -->

<!-- end of main -->
    <%- include('./includes/script.ejs') %> 
</body>
</html>